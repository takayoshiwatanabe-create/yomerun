{
  "expo": {
    "name": "音読フィードバックアプリ：『ヨメルン（Yomerun）』",
    "slug": "yomerun",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "yomerun",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zerocode.yomerun"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.zerocode.yomerun"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      "expo-font"
    ],
    "locales": {
      "ja": "./messages/ja.json",
      "en": "./messages/en.json",
      "zh": "./messages/zh.json",
      "ko": "./messages/ko.json",
      "es": "./messages/es.json",
      "fr": "./messages/fr.json",
      "de": "./messages/de.json",
      "pt": "./messages/pt.json",
      "ar": "./messages/ar.json",
      "hi": "./messages/hi.json"
    }
  }
}

